;; Test of the lockfree library

;; test of ws_deque

;; this prevents the tests from running on a default build
(alias
 (name default)
 (package multicoretests)
 (deps ws_deque_test.exe))

(executable
 (name ws_deque_test)
 (modules ws_deque_test)
 (libraries qcheck STM lockfree)
 (preprocess (pps ppx_deriving.show)))

(alias
 (name default)
 (package multicoretests)
 (deps mpsc_queue_test.exe))

(executable
 (name mpsc_queue_test)
 (modules mpsc_queue_test)
 (libraries qcheck STM lockfree)
 (preprocess (pps ppx_deriving.show)))

(env
 (_
  (binaries
   (../check_error_count.exe as check_error_count))))

(rule
 (alias runtest)
 (package multicoretests)
 (deps ws_deque_test.exe)
 (action
  (progn
   (bash "(./ws_deque_test.exe --no-colors --verbose || echo 'test run triggered an error') | tee wsd-output.txt")
   (run %{bin:check_error_count} "lockfree/ws_deque_test" 1 wsd-output.txt))))

(rule
 (alias runtest)
 (package multicoretests)
 (deps mpsc_queue_test.exe)
 (action
  (progn
   (bash "(./mpsc_queue_test.exe --no-colors --verbose || echo 'test run triggered an error') | tee lfq-output.txt")
   (run %{bin:check_error_count} "lockfree/mpsc_queue_test" 1 lfq-output.txt))))
